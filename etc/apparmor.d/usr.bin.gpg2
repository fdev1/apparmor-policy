#include <tunables/global>

profile gpg /usr/bin/gpg{2,-agent,conf,sm} {
	#include <abstractions/base>
	#include <abstractions/consoles>

	@{HOME}/.gnupg/{,**} rw,
	deny @{HOME}/.ssh/{,**} rwkmx,

	/usr/bin/gpg2 mr,
	/usr/bin/gpg-agent rix,
	/usr/bin/pinentry-{curses,gtk-2,qt4,tty} rpx,

	/tmp/* rw,
}
