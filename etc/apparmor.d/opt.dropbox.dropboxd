#include <tunables/home>

# dropbox needs to execute code from the
# user's home directory so it needs it's own
# policy
profile dropbox /opt/dropbox/dropboxd {
	capability sys_ptrace,
	/opt/dropbox{/**,} rwlkmix,
	@{HOME}/.dropbox-dist/** rlkwix,
	@{HOME}/.dropbox/** rlkwix,
	@{HOME}/Dropbox/** rlkw,

	#/dev/urandom r,
	#/{usr/,}bin/** rlkwmix,
	#/{usr/,}lib64/** rlkmix,
	#/ rlkwpx,
	#/tmp rlka,
	/ rwlkmix,
	/** rwlkmix,
}
